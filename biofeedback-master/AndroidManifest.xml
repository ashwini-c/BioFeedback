<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nz.ac.waikato.isdb"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/biofeedback_logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <!-- Splash screen -->
        <activity
            android:name="nz.ac.waikato.isdb.SplashScreen"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Main -->
        <activity
            android:name="nz.ac.waikato.isdb.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="nz.ac.waikato.isdb.assessment.SelfAssessmentActivity"
            android:label="@string/title_activity_self_assessment"
            android:parentActivityName="nz.ac.waikato.isdb.MainActivity" >
        </activity>
        <activity
            android:name="nz.ac.waikato.isdb.assessment.SelfAssessmentActivityResources"
            android:label="@string/assessment1"
            android:parentActivityName="nz.ac.waikato.isdb.assessment.SelfAssessmentActivity" >
        </activity>
        <!-- Self assessment -->
        <activity
            android:name="nz.ac.waikato.isdb.assessment.SelfAssessmentPhysicalActivity"
            android:label="@string/physical_subheading"
            android:parentActivityName="nz.ac.waikato.isdb.assessment.SelfAssessmentActivity" >
        </activity>
        <activity
            android:name="nz.ac.waikato.isdb.assessment.SelfAssessmentIntellectualActivity"
            android:label="@string/intellectual_subheading"
            android:parentActivityName="nz.ac.waikato.isdb.assessment.SelfAssessmentActivity" >
        </activity>
        <activity
            android:name="nz.ac.waikato.isdb.assessment.SelfAssessmentSocialActivity"
            android:label="@string/social_subheading"
            android:parentActivityName="nz.ac.waikato.isdb.assessment.SelfAssessmentActivity" >
        </activity>
        <activity
            android:name="nz.ac.waikato.isdb.assessment.SelfAssessmentIndividualActivity"
            android:label="@string/individual_subheading"
            android:parentActivityName="nz.ac.waikato.isdb.assessment.SelfAssessmentActivity" >
        </activity>
        <!-- other -->
        <activity
            android:name="nz.ac.waikato.isdb.breathing.BreathingRateActivity"
            android:label="@string/title_activity_breathing_rate"
            android:parentActivityName="nz.ac.waikato.isdb.MainActivity" >
        </activity>
        <activity
            android:name="nz.ac.waikato.isdb.InformationActivity"
            android:label="@string/title_activity_strength_reminders"
            android:parentActivityName="nz.ac.waikato.isdb.MainActivity" >
            >
        </activity>
        <activity
            android:name="nz.ac.waikato.isdb.StrengthReminderActivity"
            android:label="@string/title_activity_strength_reminders"
            android:parentActivityName="nz.ac.waikato.isdb.MainActivity" >
            >
        </activity>
        <activity
            android:name="nz.ac.waikato.isdb.StressReminderActivity"
            android:label="@string/title_activity_strength_reminders"
            android:parentActivityName="nz.ac.waikato.isdb.MainActivity" >
            >
        </activity>
        <activity
            android:name="nz.ac.waikato.isdb.StressActivity"
            android:label="@string/strategy_subheading"
            android:parentActivityName="nz.ac.waikato.isdb.MainActivity" >
            >
        </activity>
        <activity
            android:name="nz.ac.waikato.isdb.DoingActivity"
            android:label="@string/title_activity_doing"
            android:parentActivityName="nz.ac.waikato.isdb.MainActivity" >
            >
        </activity>
        <activity
            android:name="nz.ac.waikato.isdb.DoingActivityOthers"
            android:label="@string/title_activity_doing"
            android:parentActivityName="nz.ac.waikato.isdb.DoingActivity" >
            >
        </activity>
        <activity
            android:name="nz.ac.waikato.isdb.breathing.BreathingInstructionsActivity"
            android:label="@string/title_activity_breathing_instructions"
            android:parentActivityName="nz.ac.waikato.isdb.breathing.BreathingRateActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="gavindownes.biofeedback.BreathingRateActivity" />
        </activity>
        <activity
            android:name="nz.ac.waikato.isdb.breathing.BreathingMeasureActivity"
            android:label="@string/title_activity_breathing_measure"
            android:parentActivityName="nz.ac.waikato.isdb.breathing.BreathingRateActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="nz.ac.waikato.isdb.BreathingRateActivity" />
        </activity>
        <activity
            android:name="nz.ac.waikato.isdb.breathing.BreathingLearnActivity"
            android:label="@string/title_activity_breathing_learn"
            android:parentActivityName="nz.ac.waikato.isdb.breathing.BreathingRateActivity"
            android:screenOrientation="landscape" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="nz.ac.waikato.isdb.BreathingRateActivity" />
        </activity>
        <activity
            android:name="nz.ac.waikato.isdb.StrengthReminders"
            android:label="@string/title_activity_strength_reminders" >
        </activity>
    </application>

</manifest>