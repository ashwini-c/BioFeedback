<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context=".DoingActivity" >

 

    <Button
        android:id="@+id/buttonStrengthReminders"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:background="@drawable/purple_button"
        android:enabled="true"
        android:onClick="startStrengthReminders"
        android:text="Strength Reminders"
        android:textColor="@color/white"
        android:width="270dp" />

    <Button
        android:id="@+id/buttonStressReminders"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:background="@drawable/purple_button"
        android:enabled="true"
        android:onClick="startStressReminders"
        android:text="Stress Management"
        android:textColor="@color/white"
        android:width="270dp" />

    <Button
        android:id="@+id/ButtonInformation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:background="@drawable/purple_button"
        android:enabled="true"
        android:onClick="startInformation"
        android:text="@string/title_activity_information"
        android:textColor="@color/white"
        android:width="270dp" />

    <Button
        android:id="@+id/buttonOthers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:background="@drawable/purple_button"
        android:enabled="true"
        android:onClick="startOthers"
        android:text="Others"
        android:textColor="@color/white"
        android:width="270dp" />

</LinearLayout>